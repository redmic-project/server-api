{
	"settings": {
		"index": {
			"max_ngram_diff": 18,
			"number_of_shards": 3
		},
		"analysis": {
			"analyzer": {
				"lower_analyzer": {
					"type": "custom",
					"tokenizer": "standard",
					"filter": ["lowercase", "asciifolding"]
				},
				"autocomplete": {
					"type": "custom",
					"tokenizer": "whitespace",
					"filter": ["lowercase", "asciifolding", "nGram_filter"]
				}
			},
			"tokenizer": {},
			"filter": {
				"nGram_filter": {
					"type": "nGram",
					"min_gram": 2,
					"max_gram": 20
				}
			}
		}
	},
	"mappings": {
		"_doc": {
			"dynamic": "false",
			"properties": {
				"id": {
					"type": "long"
				},
				"uuid": {
					"type": "keyword"
				},
				"name": {
					"type": "keyword",
					"fields": {
						"suggest": {
							"type": "text",
							"analyzer": "autocomplete",
							"search_analyzer": "lower_analyzer"
						}
					}
				},
				"organisation": {
					"dynamic": "false",
					"properties": {
						"id": {
							"type": "long"
						}
					}
				},
				"contacts": {
					"type": "nested",
					"dynamic": "false",
					"properties": {
						"id": {
							"type": "long"
						},
						"organisation": {
							"dynamic": "false",
							"properties": {
								"id": {
									"type": "long"
								}
							}
						},
						"contact": {
							"dynamic": "false",
							"properties": {
								"id": {
									"type": "long"
								}
							}
						},
						"role": {
							"dynamic": "false",
							"properties": {
								"id": {
									"type": "long"
								}
							}
						},
						"startDate": {
							"type": "date",
							"format": "date_time"
						},
						"endDate": {
							"type": "date",
							"format": "date_time"
						}
					}
				},
				"platformType": {
					"dynamic": "false",
					"properties": {
						"id": {
							"type": "integer"
						},
						"name": {
							"type": "keyword"
						}
					}
				},
				"updated": {
					"type": "date",
					"format": "date_time"
				}
			}
		}
	}
}

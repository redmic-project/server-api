{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Activity DTO",
	"type": "object",
	"properties": {
		"id": {
			"type": [
				"integer",
				"null"
			]
		},
		"name": {
			"type": "string",
			"minLength": 1,
			"maxLength": 500
		},
		"parent": {
			"type": "integer",
			"url": "/operator/projects/"
		},
		"code": {
			"type": [
				"string",
				"null"
			],
			"maxLength": 25
		},
		"description": {
			"type": [
				"string",
				"null"
			],
			"maxLength": 1500
		},
		"note": {
			"type": [
				"string",
				"null"
			],
			"maxLength": 1500
		},
		"resources": {
			"type": [
				"array",
				"null"
			],
			"uniqueItemsByRequiredProperties": true,
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/ActivityResourceDTO"
			}
		},
		"accessibility": {
			"type": "integer",
			"url": "/operator/accessibilities/"
		},
		"scope": {
			"type": [
				"integer",
				"null"
			],
			"url": "/operator/scopes/"
		},
		"activityType": {
			"type": "integer",
			"url": "/operator/activitytypes"
		},
		"startDate": {
			"type": "string",
			"format": "date-time"
		},
		"endDate": {
			"type": [
				"string",
				"null"
			],
			"format": "date-time"
		},
		"documents": {
			"type": [
				"array",
				"null"
			],
			"uniqueItemsByRequiredProperties": true,
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/ActivityDocumentDTO"
			}
		},
		"platforms": {
			"type": [
				"array",
				"null"
			],
			"uniqueItemsByRequiredProperties": true,
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/ActivityPlatformRoleDTO"
			}
		},
		"contacts": {
			"type": [
				"array",
				"null"
			],
			"uniqueItemsByRequiredProperties": true,
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/ContactOrganisationRoleDTO"
			}
		},
		"organisations": {
			"type": [
				"array",
				"null"
			],
			"uniqueItemsByRequiredProperties": true,
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/OrganisationRoleDTO"
			}
		},
		"licence": {
			"type": [
				"string",
				"null"
			],
			"maxLength": 5000
		},
		"normative": {
			"type": [
				"string",
				"null"
			],
			"maxLength": 5000
		},
		"spatialExtension": {
			"type": [
				"string",
				"null"
			]
		},
		"starred": {
			"type": [
				"boolean",
				"null"
			]
		},
		"themeInspire": {
			"type": [
				"integer",
				"null"
			],
			"url": "/operator/themeinspire"
		}
	},
	"required": [
		"name",
		"startDate",
		"accessibility",
		"parent",
		"activityType"
	],
	"definitions": {
		"ActivityResourceDTO": {
			"type": "object",
			"properties": {
				"id": {
					"type": ["integer", "null"]
				},
				"resourceType": {
					"type": "integer",
					"url": "/operator/resourcetype"
				},
				"urlResource": {
					"type": "string",
					"minLength": 1,
					"maxLength": 500
				}
			},
			"required": ["resourceType", "urlResource"]
		},
		"ActivityDocumentDTO": {
			"type": "object",
			"properties": {
				"id": {
					"type": [
						"integer",
						"null"
					]
				},
				"document": {
					"type": "integer",
					"url": "/operator/documents/"
				}
			},
			"required": [
				"document"
			]
		},
		"ActivityPlatformRoleDTO": {
			"type": "object",
			"properties": {
				"id": {
					"type": [
						"integer",
						"null"
					]
				},
				"platform": {
					"type": "integer",
					"url": "/operator/platforms/"
				},
				"contact": {
					"type": "integer",
					"url": "/operator/contacts/"
				},
				"role": {
					"type": "integer",
					"url": "/operator/contactroles/"
				},
				"endDate": {
					"type": [
						"string",
						"null"
					],
					"format": "date-time"
				},
				"startDate": {
					"type": [
						"string",
						"null"
					],
					"format": "date-time"
				}
			},
			"required": [
				"platform",
				"contact",
				"role"
			]
		},
		"ContactOrganisationRoleDTO": {
			"type": "object",
			"properties": {
				"id": {
					"type": [
						"integer",
						"null"
					]
				},
				"contact": {
					"type": "integer",
					"url": "/operator/contacts/"
				},
				"organisation": {
					"type": "integer",
					"url": "/operator/organisations/"
				},
				"role": {
					"type": "integer",
					"url": "/operator/contactroles/"
				},
				"endDate": {
					"type": [
						"string",
						"null"
					],
					"format": "date-time"
				},
				"startDate": {
					"type": [
						"string",
						"null"
					],
					"format": "date-time"
				}
			},
			"required": [
				"contact",
				"organisation",
				"role"
			]
		},
		"OrganisationRoleDTO": {
			"type": "object",
			"properties": {
				"id": {
					"type": [
						"integer",
						"null"
					]
				},
				"organisation": {
					"type": "integer",
					"url": "/operator/organisations/"
				},
				"role": {
					"type": "integer",
					"url": "/operator/organisationroles/"
				},
				"endDate": {
					"type": [
						"string",
						"null"
					],
					"format": "date-time"
				},
				"startDate": {
					"type": [
						"string",
						"null"
					],
					"format": "date-time"
				}
			},
			"required": [
				"organisation",
				"role"
			]
		}
	}
}
